<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
<script src='js/index.js' type='text/javascript'></script>
<script src='js/emojiSlider.js' type='text/javascript'></script>

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Lato", sans-serif
  }

  .w3-bar h1,
  button {
    font-family: "Montserrat", sans-serif
  }
</style>

<body bgcolor="#4CAF50">
  <!-- Navbar -->
  <div id="navbar" class="w3-top">
    <div class="w3-bar w3-black w3-card w3-left-align w3-large">
      <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large green" href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
      <button onclick="window.location.reload();" class="w3-bar-item w3-button w3-padding-large w3-black">Home</button>
      <button id="about-button" onclick="document.getElementById('about-content').style.display='block'" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">About Us</button>
      <div id="about-content" align="center" class="w3-modal">
        <div class="w3-modal-content w3-card-4">
          <header class="w3-container w3-green">
            <span id="close" onclick="document.getElementById('about-content').style.display='none'" class="w3-button w3-display-topright">&times;</span>
            <h2>About Project PHI</h2>
          </header>
          <div class="w3-container">
            <p class="w3-text-black">Phi is a web application that allows you, the user, to
              generate a
              playlist based on your mood. This is accomplished through the answering of several questions
              asked through our interface.</p>
            <p class="w3-text-black">These questions that are answered return to the AI a set of
              values that
              are then compared to our database of songs, provided to us through Spotify. Any songs that meet
              the criteria given are placed into a playlist. Simply log in with your Spotify account and get
              started! *Disclosure: We do not save any account information, all login credentials are stored
              through Spotify.*</p>
            <h2 class="w3-text-black">About the Team</h2>
            <p3 class="w3-text-black">We are a team of Computer Science students at Salisbury
              University with
              interests in Machine Learning, Web Development, and general Software engineering.
            </p3>
            <br><br>
            <p3 class="w3-text-black">Sean Brittingham</p3>
            <br>
            <p3 class="w3-text-black">Alex Titus</p3>
            <br>
            <p3 class="w3-text-black">Evan Tamosaitis</p3>
            <br>
            <p3 class="w3-text-black">Blade Forsythe</p3>
            <br>
            <p3 class="w3-text-black">Matt Adams</p3>
          </div>
          <footer class="w3-container w3-green">
          </footer>
        </div>
      </div>
    </div>
  </div>

  <!-- Navbar on small screens -->
  <div id="navDemo" class="w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium w3-large">
    <a id="about-button" class="w3-bar-item w3-button w3-padding-large">About Us</a>
  </div>

  <header class="w3-container green w3-center" style="padding:128px 16px">
    <h1 id="title" class="w3-margin w3-jumbo w3-text-white">Project PHI</h1>
    <p id="title2" class="w3-xlarge w3-text-white">Created by Team BEAMS</p>
    <button id="start-button" class="w3-button w3-black w3-padding-large w3-large w3-margin-top">Get
      Started</button>
  </header>

  <div id="input" align="center">
    <h1 id="input-header" class="top">Tell Us, How Are You Feeling?</h1>
    <div id="emoji-slider" style="position: absolute"></div>
    <br><br><br><br><br>
    <div id="num-songs">
      How many songs would you like to generate?<br>
      <select>
        <option value='20'>20</option>
        <option value='25'>25</option>
        <option value='30'>30</option>
        <option value='35'>35</option>
        <option value='40'>40</option>
        <option value='45'>45</option>
        <option value='50'>50</option>
      </select>
    </div>
    <div id="genre-form">
      Select a genre<br>
      <select>
        <option value='americana'>Americana</option>
        <option value='bluegrass'>Bluegrass</option>
        <option value='blues'>Blues</option>
        <option value='classical'>Classical</option>
        <option value='country'>Country</option>
        <option value='edm'>EDM</option>
        <option value='emo'>Emo</option>
        <option value='folk'>Folk</option>
        <option value='funk'>Funk</option>
        <option value='grunge'>Grunge</option>
        <option value='hardcore'>Hardcore</option>
        <option value='hip hop'>Hip Hop</option>
        <option value='house'>House</option>
        <option value='indie'>Indie</option>
        <option value='jazz'>Jazz</option>
        <option value='metal'>Metal</option>
        <option value='pop'>Pop</option>
        <option value='rap'>Rap</option>
        <option value='rock'>Rock</option>
        <option value='r&b'>R&B</option>
        <option value='screamo'>Screamo</option>
        <option value='ska'>Ska</option>
        <option value='trap'>Trap</option>
        <option value='yodeling'>Yodeling</option>
      </select>
    </div>
    <br>
    <button id='submit-button' type="submit" class="button left black large margin-top">
      Submit
    </button>
  </div>

  {{!-- here --}}
  <div id="output" align="center">
    <div id="playlist"></div>
    {{!-- playlist --}}
    <i onclick="myFunction(this)" class="fa fa-thumbs-up"></i>
    <script>
      function myFunction(x) {
        x.classList.toggle("fa-thumbs-down");
      }
    </script>
    <br><br>
    <button id="export-button" type='submit' class="button black large margin-top">
      Export to Spotify
    </button>
    <button id="restart" type='submit' class="button black large margin-top" method='post'>
      Start Over
    </button><br>
  </div>
</body>
